<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
     rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
     crossorigin="anonymous">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" 
     integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" 
     crossorigin="anonymous" 
     referrerpolicy="no-referrer" />
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/rating.css">
     <link href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css" rel="stylesheet" />
  <script src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"></script>
  <script> const categories = ["Trending","Rooms","Iconic cities","Mountains","Castles","Pools","Camping","Farms","Arctic","Doms","Boats"]; </script>
</head>
<body>
    <%- include("../includes/navbar.ejs") %>
    <div class="container">
        <%- include("../includes/flash.ejs") %>
        <%- body %>
    </div>

    <!-- ===== FILTER MODAL ===== -->
    <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form action="/listings/search-filter" method="GET">
            <div class="modal-header">
              <h5 class="modal-title" id="filterModalLabel">Filter Listings</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <!-- Search -->
              <div class="mb-3">
                <label for="q" class="form-label">Search Destinations</label>
                <input type="text" class="form-control" name="q" id="q" placeholder="Enter a location or title" value="<%= typeof q !== 'undefined' ? q : '' %>">
              </div>

              <!-- Category -->
              <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" name="category" id="category">
                  <% const cats = ["All", ...categories]; %>
                  <% cats.forEach(cat => { %>
                    <option value="<%= cat %>" <%= (typeof filters !== 'undefined' && filters?.category === cat || (typeof filters === 'undefined' || !filters?.category) && cat==="All") ? "selected" : "" %>><%= cat %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Price -->
              <div class="mb-3">
                <label class="form-label">Price Range (â‚¹)</label>
                <div class="d-flex">
                  <input type="number" class="form-control me-2" name="minPrice" placeholder="Min" value="<%= typeof filters !== 'undefined' ? filters?.minPrice || '' : '' %>">
                  <input type="number" class="form-control" name="maxPrice" placeholder="Max" value="<%= typeof filters !== 'undefined' ? filters?.maxPrice || '' : '' %>">
                </div>
              </div>

              <!-- Minimum Rooms -->
              <div class="mb-3">
                <label for="rooms" class="form-label">Minimum Rooms</label>
                <input type="number" class="form-control" name="rooms" id="rooms" min="1" value="<%= typeof filters !== 'undefined' ? filters?.rooms || '' : '' %>">
              </div>

              <!-- Amenities -->
              <div class="mb-3">
                <label class="form-label">Amenities</label>
                <% const amenityList = ["Wifi","Parking","Kitchen","Pool"]; %>
                <% amenityList.forEach(a => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="amenities" value="<%= a %>" id="amenity<%= a %>" <%= typeof filters !== 'undefined' && filters?.amenities?.includes(a) ? "checked" : "" %>>
                    <label class="form-check-label" for="amenity<%= a %>"><%= a %></label>
                  </div>
                <% }) %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary custom-btn">Apply Filters</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>

     <%- include("../includes/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" 
    crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>