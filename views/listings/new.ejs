<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3> <br>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required/>
          <div class="invalid-feedback">Enter a valid title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required></textarea>
          <div class="invalid-feedback">Enter a valid description</div>
        </div>

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" required/>
        </div> 

        <!-- Price & Country -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price" class="form-control" required/>
            <div class="invalid-feedback">Enter a valid price</div>
          </div>
          
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required />
            <div class="invalid-feedback">Enter a valid country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />
          <div class="invalid-feedback">Enter a valid location</div>
        </div>

        <!-- Category -->
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-select" required>
            <% categories.forEach(cat => { %>
              <option value="<%= cat %>"><%= cat %></option>
            <% }); %>
          </select>
          <div class="invalid-feedback">Please select a category</div>
        </div>

        <!-- Rooms, Beds, Bathrooms -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="rooms" class="form-label">Rooms</label>
            <input type="number" min="1" name="listing[rooms]" class="form-control" value="1" required/>
          </div>
          <div class="mb-3 col-md-4">
            <label for="beds" class="form-label">Beds</label>
            <input type="number" min="1" name="listing[beds]" class="form-control" value="1" required/>
          </div>
          <div class="mb-3 col-md-4">
            <label for="bathrooms" class="form-label">Bathrooms</label>
            <input type="number" min="1" name="listing[bathrooms]" class="form-control" value="1" required/>
          </div>
        </div>

        <!-- Amenities -->
        <div class="mb-3">
          <label class="form-label">Amenities</label>
          <% const amenityList = ["Wifi","Parking","Kitchen","Pool"]; %>
          <% amenityList.forEach(a => { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="listing[amenities][]" value="<%= a %>" id="amenity<%= a %>">
              <label class="form-check-label" for="amenity<%= a %>"><%= a %></label>
            </div>
          <% }); %>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add Listing</button>
        <br><br>
      </form>
    </div>
  </div>
</body>
